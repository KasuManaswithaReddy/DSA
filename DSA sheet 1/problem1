//Search an Element in an array problem.

class Solution{
 public:
    // Function to search x in arr
    // arr: input array
    // X: element to be searched for
    int search(int arr[], int N, int X)
    {
        
        // Your code here
        int a=0;
        for(int i=0;i<N;i++){
            if(arr[i]==X){
                a=1;
                return i;
            }
        }
        if(a==0){
            return -1;
        }
        
    }
};
